{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}

      <!-- Visitor map inside footer -->
      <div class="visitor-map" style="margin-top: 1.5rem; text-align:center;">
        <a href="https://www.clustrmaps.com" title="View ClustrMaps">
          <img src="https://clustrmaps.com/map_v2.png?url=https://yourwebsite.com" 
               alt="Visitor Map" 
               style="max-width:100%; height:auto; border:0;" />
        </a>
      </div>

    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {{ footer_contents }}

      <!-- Visitor map inside footer -->
      <div class="visitor-map" style="margin-top: 1.5rem; text-align:center;">
        <a href="https://www.clustrmaps.com" title="View ClustrMaps">
          <img src="https://clustrmaps.com/map_v2.png?url=https://sadam-st.github.io" 
               alt="Visitor Map" 
               style="max-width:100%; height:auto; border:0;" />
        </a>
      </div>

    </div>
  </footer>
{% endif %}
